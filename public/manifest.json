{
  "name": "Astro Answer",
  "description": "Explore the wisdom of the universe with AI-generated horoscopes and personalized answers to your questions",
  "version": "0.0.3",
  "manifest_version": 3,
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {},
  "permissions": [
    "storage",
    "geolocation"
  ],
  "host_permissions": [
    "https://astro-answer.com/api/horoscope",
    "https://astro-answer.com/api/question"
  ]
}
